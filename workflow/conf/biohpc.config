process {
  executor = 'slurm'
  queue = 'super'
  clusterOptions = '--hold'

  withName:getBag {
    executor = 'local'
  }
  withName:getData {
    executor = 'local'
  }
  withName:trimData {
    queue = '256GB,256GBv1,384GB'
  }
  withName:alignReads {
    queue = '256GB,256GBv1,384GB'
  }
}

singularity {
  enabled = true
  cacheDir = '/project/shared/bicf_workflow_ref/singularity_images/'
}

env {
  http_proxy = 'http://proxy.swmed.edu:3128'
  https_proxy = 'http://proxy.swmed.edu:3128'
  all_proxy = 'http://proxy.swmed.edu:3128'
}
